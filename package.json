{
  "name": "changelog-kr",
  "version": "2.3.0",
  "description": "AI 도구들의 Changelog를 한국어로 번역/표시하는 서비스 (changelog.kr)",
  "type": "module",
  "scripts": {
    "parse": "node scripts/parse-changelog.mjs",
    "translate": "node scripts/translate.mjs",
    "detect": "node scripts/detect-new-versions.mjs",
    "build": "node scripts/build-site.mjs",
    "notify:telegram": "node scripts/notify-telegram.mjs",
    "notify:email": "node scripts/notify-email.mjs",
    "test": "node --test tests/*.test.mjs",
    "test:e2e": "npx playwright test",
    "test:e2e:desktop": "npx playwright test --project=desktop",
    "test:e2e:mobile": "npx playwright test --project=mobile",
    "test:all": "npm test && npm run test:e2e",
    "release": "commit-and-tag-version",
    "release:minor": "commit-and-tag-version --release-as minor",
    "release:major": "commit-and-tag-version --release-as major"
  },
  "keywords": [
    "changelog",
    "korean",
    "translation",
    "claude-code",
    "codex-cli",
    "gemini-cli",
    "ai-tools"
  ],
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "commit-and-tag-version": "^12.6.1"
  }
}
